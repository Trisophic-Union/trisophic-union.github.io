---
import "tailwindcss"
interface Props {
    title: string;
    image?: string;
}
const { title, image = ""} = Astro.props;

const imageUrl = `"${image}"`
---

<section id="hero" style=`background: no-repeat center url(${imageUrl}); background-size: cover;`>
    <div id="hero-content">
        <nav style="justify-items:right;">
            <h2 style="animation: upndownless 5s ease-in-out infinite;">Info</h2>
            <a style="max-width: 90%;" class="rightSlide"><s>Ideology</s></a>
            <a style="max-width: 60%; animation-delay: 250ms;" class="rightSlide"><s>Governing Structure</s></a>
        </nav>
        <div>
            <h1 style="animation: upndownless 10s ease-in-out infinite; animation-delay: 200ms;">{title}</h1>
            <hr style="animation: upndownless 10s ease-in-out infinite; animation-delay: 300ms;">
            <slot></slot>
        </div>
        <nav style="justify-items:left;">
            <h2 style="animation: upndownless 5s ease-in-out infinite; animation-delay: 100ms;">Major Projects</h2>
            <a style="max-width: 90%; animation-delay: 500ms;" class="leftSlide" href="https://alexandrian-sapling-9aa469.gitlab.io/">Alexandria's Sapling - Learning Library</a>
            <a style="max-width: 60%; animation-delay: 750ms;" class="leftSlide"><s>Project Algocracy - Programable Laws</s></a>
        </nav>
    </div>
</section>

<style lang="less">
#hero{
    display: grid;
    align-items: center;
    justify-content: center;

    width:100vw;
    height: 100vh;
    max-height: 100vh;

    text-align: center;

    color:white;

    overflow:hidden;
}
#hero::after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #002368c4;
    z-index: 1;
}
#hero-content{
    flex: 1;
    z-index: 999;

    display: grid;
    align-items: center;
    justify-items: center;

    grid-auto-flow: column;

    width: 100vw;
}
.rightSlide::after{
    right:0;
}
.leftSlide::after{
    left:0;
}
@keyframes upndown {
    0% {transform: translateY(0px);}
    50% {transform: translateY(-20px);}
    100% {transform: translateY(0px);}
}
@keyframes upndownless {
    0% {transform: translateY(0px);}
    50% {transform: translateY(-7px);}
    100% {transform: translateY(0px);}
}

nav{
    display: grid;
    width: calc(25vw - 20px);
    padding-inline: 15px;
    h2{
        margin-block:25px;
        font-size: 2rem;
        text-decoration: underline;
        width: 100%;
        align-items: center;
    }
    a{
        position: relative;
        width: 80%;
        background: #00013fbe;
        margin:10px;
        padding:15px;

        font-size: 1.1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

        animation: upndown 3s ease-in-out infinite;
        color:white;
        transition: 100ms;
        &::after{
            content: "";
            position: absolute;
            width: 0%;
            height: 100%;
            top:0;
            transition: 100ms;

            z-index: -1;
        }
        &:hover::after{
            background: rgb(186, 188, 255);
            width: 100%;
        }
        &:hover{
            color:black;
        }
    }
}
div{
    width: 50vw;
}
h1{
    font-family: 'Courier New', Courier, monospace;
    font-size: 4rem;

    text-align: center;
    margin:0;

    color: rgb(255, 255, 255);
}

</style>
